extends _layouts/home

block head_end
	// Social: Facebook / Open Graph
	meta(property="og:title", content = about.title)
	meta(property="og:description", content = about.description)
	meta(property="og:image", content = about.image)
	meta(property="og:url", content = about.url)
	meta(property="og:site_name", content = about.title)
	meta(property="og:type", content = "website")

	// Social: Twitter
	meta(name="twitter:title", content = about.title)
	meta(name="twitter:description", content = about.description)
	meta(property="twitter:image:src", content = about.image)
	meta(name="twitter:url", content = about.url)
	meta(name="twitter:card", content = "summary_large_image")

	// Social: Google+
	meta(itemprop="name", content = about.title)
	meta(itemprop="description", content = about.description)
	meta(itemprop="image", content = about.image)

block content
	include _partials/intro

block body_end
	script(type="text/javascript" src="https://cdn.jsdelivr.net/night-mode-js/1.0.0/night-mode.min.js")
	script(type="text/javascript" src="/js/script.js")
